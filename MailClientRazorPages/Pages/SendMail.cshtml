@page
@model MailClientRazorPages.Pages.SendMailModel
@{
    ViewData["Title"] = "Send Mail";
}

<h2>Send Mail</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MailModel.To" class="control-label"></label>
                <input asp-for="MailModel.To" class="form-control" />
                <span asp-validation-for="MailModel.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailModel.Subject" class="control-label"></label>
                <input asp-for="MailModel.Subject" class="form-control" />
                <span asp-validation-for="MailModel.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailModel.Body" class="control-label"></label>
                <textarea asp-for="MailModel.Body" class="form-control"></textarea>
                <span asp-validation-for="MailModel.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}